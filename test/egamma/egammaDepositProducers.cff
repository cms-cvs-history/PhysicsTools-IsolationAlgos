include "EgammaAnalysis/EgammaIsolationProducers/data/egammaSuperClusterMerger.cfi"
include "EgammaAnalysis/EgammaIsolationProducers/data/egammaBasicClusterMerger.cfi"

module egammaElectronTkDeposits = candIsoDepositCtfTk from "PhysicsTools/IsolationAlgos/test/mu/candIsoDepositCtfTk.cfi"
replace egammaElectronTkDeposits.src = pixelMatchGsfElectrons
replace egammaElectronTkDeposits.trackType = "gsf"
replace egammaElectronTkDeposits.ExtractorPSet.DR_Max    = 0.7
replace egammaElectronTkDeposits.ExtractorPSet.DR_Veto   = 0.02
replace egammaElectronTkDeposits.ExtractorPSet.Diff_z    = 0.1

module egammaPhotonTkDeposits = candIsoDepositCtfTk from "PhysicsTools/IsolationAlgos/test/mu/candIsoDepositCtfTk.cfi"
replace egammaPhotonTkDeposits.src = photons
replace egammaPhotonTkDeposits.trackType = "fake"
replace egammaPhotonTkDeposits.ExtractorPSet.DR_Max    = 0.7
replace egammaPhotonTkDeposits.ExtractorPSet.DR_Veto   = 0.0
replace egammaPhotonTkDeposits.ExtractorPSet.Diff_z    = 1

module egammaHcalDeposits  = candIsoDepositEgammaHcal from "PhysicsTools/IsolationAlgos/test/egamma/candIsoDepositEgammaHcal.cfi"
replace egammaHcalDeposits.src       = pixelMatchGsfElectrons

module egammaRecHitsHcalDeposits  = candIsoDepositEgammaRecHitsHcal from "PhysicsTools/IsolationAlgos/test/egamma/candIsoDepositEgammaRecHitsHcal.cfi"
replace egammaRecHitsHcalDeposits.src       = pixelMatchGsfElectrons

module egammaRecHitsEcalDeposits  = candIsoDepositEgammaRecHitsEcal from "PhysicsTools/IsolationAlgos/test/egamma/candIsoDepositEgammaRecHitsEcal.cfi"
replace egammaRecHitsEcalDeposits.src       = pixelMatchGsfElectrons
replace egammaRecHitsEcalDeposits.ExtractorPSet.extRadius = 0.6

module egammaTowersDeposits  = candIsoDepositEgammaTowers from "PhysicsTools/IsolationAlgos/test/egamma/candIsoDepositEgammaTowers.cfi"
replace egammaTowersDeposits.src       = pixelMatchGsfElectrons
replace egammaTowersDeposits.ExtractorPSet.extRadius = 0.7

module egammaEcalDeposits  = candIsoDepositEgammaEcal from "PhysicsTools/IsolationAlgos/test/egamma/candIsoDepositEgammaEcal.cfi"
replace egammaEcalDeposits.src       = pixelMatchGsfElectrons
replace egammaEcalDeposits.ExtractorPSet.extRadius = 0.5

sequence egammaEcalDepositsSequence = {egammaSuperClusterMerger , egammaBasicClusterMerger , egammaEcalDeposits }

sequence aodEgammaDeposits = { egammaElectronTkDeposits, egammaPhotonTkDeposits, egammaTowersDeposits, egammaEcalDepositsSequence } 
sequence allEgammaDeposits = { aodEgammaDeposits, egammaHcalDeposits, egammaRecHitsHcalDeposits, egammaRecHitsEcalDeposits } 
